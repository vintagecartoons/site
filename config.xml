<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "tv.vintagecartoons.app"
        versionCode="10" 
        version   = "1.0.0">

    <name>Vintage Cartoons</name>

    <description>
        Watch cartoons in this original vintage TV. 
        Videos from Archive.org beautifully presented.
    </description>

    <author href="http://vintagecartoons.tv" email="info@vintagecartoons.tv">
        Sven Hecht, Andreas Dittes
    </author>

    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />

    <icon src="icon.png" />

    <icon src="apple-touch-icon-57x57-precomposed.png" gap:platform="ios" width="57" height="57" />
    <icon src="apple-touch-icon-72x72-precomposed.png" gap:platform="ios" width="72" height="72" />
    <icon src="apple-touch-icon-114x114-precomposed.png" gap:platform="ios" width="114" height="114" />
    <icon src="apple-touch-icon-144x144-precomposed.png" gap:platform="ios" width="144" height="144" />

    <icon src="android-icon-ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="android-icon-mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="android-icon-hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="android-icon-xhdpi.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="splash.png" />

    <gap:splash src="apple-splash-default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="apple-splash-default_at_2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="apple-splash-default_iphone5.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="apple-splash-default-Landscape.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="apple-splash-default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />

    <gap:splash src="android-splash-ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="android-splash-mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="android-splash-hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="android-splash-xhdpi.png" gap:platform="android" gap:density="xhdpi" />

    <access origin="*" />

</widget>